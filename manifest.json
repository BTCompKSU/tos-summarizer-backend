{
  "manifest_version": 3,
  "name": "AI TOS Analyzer",
  "version": "1.0",
  "description": "Summarizes Terms of Service pages and flags red flags using AI.",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": [
            "*://*/terms*", 
            "*://*/tos*", 
            "*://*/legal*",
            "*://*/privacy*"
        ],
      "js": ["purify.min.js", "marked.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Analyze TOS"
  }
}
